#include<iostream>
using namespace std;

void accept(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
}

void remove(int arr[], int n) {
    int e;
    cin >> e;
    int i;
    for (i = 0; i < n; i++) {
        if (arr[i] == e) {
            break;
        }
    }
    if (i == n) {
        cout << "Element not found in the array." << endl;
        return;
    }
    for (int j = i; j < n - 1; j++) {
        arr[j] = arr[j + 1];
    }
    n--;
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;
    int* arr = new int[n];
    accept(arr, n);
    printArray(arr, n);
    remove(arr, n);
    cout << "Array after removal: ";
    printArray(arr, n);
    char flag = 'y';
    while (flag == 'y' || flag == 'Y') {
        cout << "You entered: ";
        printArray(arr, n);
        cout << "Do you want to continue? (y/n): ";
        cin >> flag;
    }
    delete[] arr;
    return 0;
}
